<%= form_with(model: @book, remote: true) do |form| %>

  <div class="form-group">
    <%= form.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :author, placeholder: "Author", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :page_length %>
    <%= form.number_field :page_length %>
  </div>

<div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
