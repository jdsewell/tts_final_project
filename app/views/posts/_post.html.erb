
  <div class="post">
  <h3><%= link_to post.user.username, show_user_path(id: post.user_id) %></h3>
  <p><%= post.message %></p>
  <p>
    <% if user_signed_in? %>
    <% if current_user.id == post.user_id %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <% end %>
  </p>
  </div>
  <br>
