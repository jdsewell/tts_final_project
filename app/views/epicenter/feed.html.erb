<div>
	<% if user_signed_in? %>
		<% if current_user.following.empty? %>
    		<h3>You're not following anyone! Take a look at the General Feed <%= link_to 'Here', index_path, class: "btn btn-default" %></h3>
    	<% end %>
		<% if user_signed_in? %>
			<% @following_posts.each do |post| %>
				<div class="post">
					<h3><%= link_to post.user.username, show_user_path(id: post.user_id) %></h3>
					<p><%= post.message.html_safe %></p>
				</div>
				<br>
			<% end %>
		<% end %>
	<% end %>
</div>