<div>
	<% if user_signed_in? %>
		<% if current_user.following.empty? %>
    		<center><h3>You're not following anyone! Take a look at the General Feed <%= link_to 'Here', index_path, class: "btn btn-default" %></h3></center>
    	<% end %>
		<% if user_signed_in? %>
			<div class="feed">
				<h1>
					Your Feed
					<%= link_to "All Posts", index_path, class: "btn btn-default pull-right" %>
				</h1>
			<% if @following_posts.empty? %>
				<h2 class="post">Nothing to see here</h2>
			<% end %>
			<% @following_posts.each do |post| %>
				<div class="post">
					<h4><%= link_to post.user.username, show_user_path(id: post.user_id) %></h4>
					<p><%= post.message.html_safe %></p>
				</div>
				<br>
			<% end %>
			</div>
		<% end %>
	<% end %>
</div>